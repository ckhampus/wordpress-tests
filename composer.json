{
    "name": "queensbridge/wordpress-tests",
    "description": "Testing library for Wordpress",
    "authors": [
        {
            "name": "Cristian Hampus",
            "email": "cristian@queensbridge.se"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "symfony/http-foundation": "2.1.1",
        "symfony/process": "2.1.1",
        "symfony/filesystem": "2.1.1",
        "symfony/finder": "2.1.1",
        "symfony/yaml": "2.1.1",
        "behat/mink": "*",
        "behat/mink-goutte-driver": "*",
        "behat/mink-selenium2-driver": "*"
    },
    "require-dev": {
        "selenium/selenium-server-standalone": "2.25.0",
        "wordpress/wordpress": "3.4.2",
        "phpunit/phpunit": "3.7.8",
        "fabpot/php-cs-fixer": "*"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-0": {
            "Queensbridge": "src/"
        }
    },
    "config": {
        "bin-dir": "bin/"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "http://ckhampus.github.com/composer-repository"
        }
    ]
}
